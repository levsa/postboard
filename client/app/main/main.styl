.thing-form
    margin 20px 0

#banner
    border-bottom none
    margin-top -20px

#banner h1
    font-size 60px
    letter-spacing -1px
    line-height 1

.hero-unit
    background #4393B9
    color #F5F5F5
    padding 30px 15px
    position relative
    text-align center
    text-shadow 0 1px 0 rgba(0, 0, 0, 0.1)

.footer
    border-top 1px solid #E5E5E5
    margin-top 70px
    padding 30px 0
    text-align center

.drop-box
    cursor: pointer;
    background: #F8F8F8;
    border: 5px solid #DDD;
    width: 400px;
    height: 100px;
    text-align: center;
    padding: 15px;
    margin: 1em;

.dragover-accept
  color: #fff;
  background-color: #47a447;
  border-color: #398439;

.dragover-reject
  color: #fff;
  background-color: #a44747;
  border-color: #398439;
